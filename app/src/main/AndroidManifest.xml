<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barberbookingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_apk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_apk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.barberbookingapp.HistoryActivity"></activity>
        <activity android:name="com.example.barberbookingapp.MainActivity" />
        <activity android:name="com.example.barberbookingapp.CartActivity" />
        <activity android:name="com.example.barberbookingapp.BookingActivity" />
        <activity android:name="com.example.barberbookingapp.HomeActivity" />
        <activity android:name="com.example.barberbookingapp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>